<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.ModernApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/cosmos_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cosmos_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ModernAndroid"
        tools:targetApi="31">
        <activity
            android:name=".views.mars.MarsImagesActivity"
            android:exported="false"
            android:label="@string/title_activity_mars_images"
            android:theme="@style/Theme.ModernAndroid" />
        <activity
            android:name=".views.detail.DetailActivity"
            android:exported="false"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.ModernAndroid" />
        <activity
            android:name=".views.home.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.ModernAndroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <receiver
            android:name=".glance.ApodWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/my_app_widget_info" />
        </receiver>


    </application>

</manifest>